<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_standard"
    android:background="@color/colorBackgroundDefault"
    tools:context=".signup_actions.SignupThreeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="40sp"
                    android:text="@string/insert_user_gender"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radiogroup_gender_myself"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/rbtn_male_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_standard"
                        android:text="@string/gender_male" />

                    <RadioButton
                        android:id="@+id/rbtn_female_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_standard"
                        android:text="@string/gender_female" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="80sp"
                    android:text="@string/insert_user_age"
                    android:textSize="20sp" />

                <NumberPicker
                    android:id="@+id/numberpicker_age_myself"
                    android:layout_width="wrap_content"
                    android:layout_height="120sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="80sp"
                    android:text="@string/insert_user_grade"
                    android:textSize="20sp" />

                <NumberPicker
                    android:id="@+id/numberpicker_grade_myself"
                    android:layout_width="wrap_content"
                    android:layout_height="120sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="40sp"
                    android:text="@string/insert_user_personality"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkbox_01_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check1" />

                    <CheckBox
                        android:id="@+id/checkbox_02_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check2" />

                    <CheckBox
                        android:id="@+id/checkbox_03_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check3" />

                    <CheckBox
                        android:id="@+id/checkbox_04_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check4" />

                    <CheckBox
                        android:id="@+id/checkbox_05_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check5" />

                    <CheckBox
                        android:id="@+id/checkbox_06_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check6" />

                    <CheckBox
                        android:id="@+id/checkbox_07_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check7" />

                    <CheckBox
                        android:id="@+id/checkbox_08_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check8" />

                    <CheckBox
                        android:id="@+id/checkbox_09_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check9" />

                    <CheckBox
                        android:id="@+id/checkbox_10_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check10" />

                    <CheckBox
                        android:id="@+id/checkbox_11_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check11" />

                    <CheckBox
                        android:id="@+id/checkbox_12_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personality_check12" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="40sp"
                    android:text="@string/insert_user_cleanness"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radiogroup_cleanness_myself"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbtn_cleanness_pick1_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cleanness_pick1" />

                    <RadioButton
                        android:id="@+id/rbtn_cleanness_pick2_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cleanness_pick2" />

                    <RadioButton
                        android:id="@+id/rbtn_cleanness_pick3_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cleanness_pick3" />

                    <RadioButton
                        android:id="@+id/rbtn_cleanness_pick4_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cleanness_pick4" />

                    <RadioButton
                        android:id="@+id/rbtn_cleanness_pick5_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cleanness_pick5" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="40sp"
                    android:text="@string/insert_user_nightfood"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radiogroup_nightfood_myself"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbtn_nightfood_pick1_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nightfood_pick1" />

                    <RadioButton
                        android:id="@+id/rbtn_nightfood_pick2_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nightfood_pick2" />

                    <RadioButton
                        android:id="@+id/rbtn_nightfood_pick3_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nightfood_pick3" />

                    <RadioButton
                        android:id="@+id/rbtn_nightfood_pick4_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nightfood_pick4" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="40sp"
                    android:text="@string/insert_user_outside_activity"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radiogroup_activity_myself"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbtn_activity_pick1_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside_activity_pick1" />

                    <RadioButton
                        android:id="@+id/rbtn_activity_pick2_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside_activity_pick2" />

                    <RadioButton
                        android:id="@+id/rbtn_activity_pick3_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside_activity_pick3" />

                    <RadioButton
                        android:id="@+id/rbtn_activity_pick4_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside_activity_pick4" />

                    <RadioButton
                        android:id="@+id/rbtn_activity_pick5_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside_activity_pick5" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="40sp"
                    android:text="@string/insert_user_max_alcohol"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radiogroup_max_alcohol_myself"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbtn_maxalcohol_pick1_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside_max_alcohol_pick1" />

                    <RadioButton
                        android:id="@+id/rbtn_maxalcohol_pick2_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside_max_alcohol_pick2" />

                    <RadioButton
                        android:id="@+id/rbtn_maxalcohol_pick3_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside_max_alcohol_pick3" />

                    <RadioButton
                        android:id="@+id/rbtn_maxalcohol_pick4_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside_max_alcohol_pick4" />

                    <RadioButton
                        android:id="@+id/rbtn_maxalcohol_pick5_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/outside_max_alcohol_pick5" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="40sp"
                    android:text="@string/insert_user_alcoho_frequent"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radiogroup_alcohol_frequency_myself"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbtn_alcoholfrequent_pick1_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alcohol_frequent_pick1" />

                    <RadioButton
                        android:id="@+id/rbtn_alcoholfrequent_pick2_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alcohol_frequent_pick2" />

                    <RadioButton
                        android:id="@+id/rbtn_alcoholfrequent_pick3_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alcohol_frequent_pick3" />

                    <RadioButton
                        android:id="@+id/rbtn_alcoholfrequent_pick4_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alcohol_frequent_pick4" />

                    <RadioButton
                        android:id="@+id/rbtn_alcoholfrequent_pick5_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alcohol_frequent_pick5" />

                    <RadioButton
                        android:id="@+id/rbtn_alcoholfrequent_pick6_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alcohol_frequent_pick6" />

                    <RadioButton
                        android:id="@+id/rbtn_alcoholfrequent_pick7_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alcohol_frequent_pick7" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_standard"
                android:paddingTop="@dimen/padding_standard">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="40sp"
                    android:text="@string/insert_user_smoking"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/radiogroup_smoking_myself"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/rbtn_smoke_yes_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/yes" />

                    <RadioButton
                        android:id="@+id/rbtn_smoke_no_myself"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/no" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24sp"
                android:paddingTop="24sp">

            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_standard"
                android:padding="@dimen/padding_standard">

                <Button
                    android:id="@+id/btn_move_to_signup_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go_to_next_page"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
