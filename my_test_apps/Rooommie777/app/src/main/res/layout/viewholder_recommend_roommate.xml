<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_reco_mate"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp" >

        <LinearLayout
            android:id="@+id/layout_reco_matea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/circleimage_reco_mate"
                android:layout_width="96sp"
                android:layout_height="96sp"
                android:layout_margin="@dimen/margin_standard"
                android:layout_gravity="center_vertical"
                android:src="@drawable/house"
                app:civ_border_width="2dp"
                app:civ_border_color="#40000000" />

            <LinearLayout
                android:id="@+id/layout_child_reco_mate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_standard"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_name_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2sp"
                    android:layout_marginStart="2sp"
                    android:layout_marginTop="2sp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="name" />

                <TextView
                    android:id="@+id/tv_age_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:visibility="gone"
                    android:text="age" />

                <TextView
                    android:id="@+id/tv_major_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:text="major" />

                <TextView
                    android:id="@+id/tv_phone_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:visibility="gone"
                    android:text="phone" />

                <TextView
                    android:id="@+id/tv_grade_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:text="grade" />

                <TextView
                    android:id="@+id/tv_clean_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:visibility="gone"
                    android:text="clean" />

                <TextView
                    android:id="@+id/tv_yasik_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:visibility="gone"
                    android:text="yasik" />

                <TextView
                    android:id="@+id/tv_character_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:visibility="gone"
                    android:text="character" />

                <TextView
                    android:id="@+id/tv_activity_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:visibility="gone"
                    android:text="outside activity" />

                <TextView
                    android:id="@+id/tv_freq_drink_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:text="freq_drink" />

                <TextView
                    android:id="@+id/tv_drink_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:visibility="gone"
                    android:text="drink" />

                <TextView
                    android:id="@+id/tv_smoke_reco_mate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:text="smoke" />

                <Button
                    android:id="@+id/btn_more_reco_mate"
                    android:layout_width="60sp"
                    android:layout_height="35sp"
                    android:layout_gravity="right"
                    android:padding="0sp"
                    android:layout_marginBottom="@dimen/margin_standard"
                    android:layout_marginRight="20sp"
                    android:background="#10000000"
                    android:text="@string/more" />

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>