<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yks93.introandroiddemojava">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">
        <activity android:name=".DemoSelector">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BasicClickHandlers"
            android:label="@string/title_activity_basic_click_handlers" />
        <activity
            android:name=".SimpleBundleDemoActivity"
            android:theme="@style/SimpleBundleDemoTheme"
            android:label="@string/title_activity_simple_bundle_demo" />
        <activity
            android:name=".AsyncTaskPerformActivity"
            android:label="@string/title_activity_async_task_perform" />
        <activity
            android:name=".ActionBarMenuActivity"
            android:label="@string/title_activity_action_bar_menu" />
        <activity
            android:name=".BasicImageDownloadActivity"
            android:label="@string/title_activity_basic_image_download" />

        <activity
            android:name=".BasicTextViewActivity"
            android:label="@string/title_activity_basic_text_view" />

    </application>

</manifest>
